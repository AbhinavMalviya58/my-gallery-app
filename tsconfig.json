{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "app/**",
    "src/contexts/**",
    "src/config/**",
    "src/screens/auth/**",
    "src/screens/GalleryScreen.tsx.clean",
    "src/screens/GalleryScreen.tsx.n"
  ]
}
